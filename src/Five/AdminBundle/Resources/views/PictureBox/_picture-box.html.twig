                                                <div class="{{ class|default('picture-box') }} col-lg-3 col-md-6 col-sm-6 col-xs-12" style="margin-bottom:25px;">     
                                                    
                                                    <div class="widget" style="overflow:hidden;">
                                                        <div class="widget-header" style="height:220px;overflow:hidden;">

                                                            <!-- PictureBox Picture > -->
                                                            <div style="width:100%;height:220px;overflow:hidden;">
                                                                <img src="{{ pic.src | default( '' ) }}" class="img-responsive picture_img" />
                                                            </div>
                                                            <input type="hidden" value="{{ pic.src | default( '' ) }}" name="src[]" />
                                                            <input type="hidden" value="{{ pic.cover | default( 0 ) }}" name="cover[]" />
                                                            <input type="hidden" value="{{ pic.id is defined ? pic.id : '' }}" name="id[]" />
                                                            <!-- < PictureBox Picture -->
                                                            <!-- PictureBox top tool Btns -->
                                                            <div style="position:absolute;top:4px;right:4px;z-index:10;">

                                                                <div class="btn-group">

                                                                    <!-- Replace picture Btn -->
                                                                    <button class="btn btn-primary btn-sm picture_update"><i class="fa icon-picture"></i></button>
                                                                    
                                                                    <!-- Edit captions Close/Edit Btns -->
                                                                    <button data-original-title="Close" data-toggle="tooltip" title="Close" type="button" class="btn btn-primary btn-sm edit_cancel hidden"><i class="fa icon-up-open"></i> Close</button>
                                                                    <button data-original-title="Edit" data-toggle="tooltip" title="Title & Description" type="button" class="btn btn-primary btn-sm edit"><i class="fa icon-edit-alt"></i> Edit</button>

                                                                </div>
                                                                 
                                                            </div>
                                                            <!-- < PictureBox top tool Btns -->

                                                            <!-- PictureBox bottom tool bar > -->
                                                            <div style="width:100%;position:absolute;bottom:0;background-color:rgba(220,220,220,.5);padding:4px;box-shadow:0 1px 3px rgba(0,0,0,.8);">                                                                
                                                                
                                                                <div class="pull-left">
                                                                    <!-- Delete picture Btn -->
                                                                    <div class="btn-group">
                                                                        <button data-original-title="Delete Picture" data-toggle="tooltip" title="Delete Picture" type="button" class="btn btn-danger btn-sm picture_delete"><i class="fa icon-trash"></i></button>
                                                                    </div>
                                                                </div>
                                                                
                                                                <div class="pull-right">
                                                                    <!-- Set as Cover picture Btn -->
                                                                    <button data-original-title="Use Picture as gallery cover" data-toggle="tooltip" title="" type="button" class="btn btn-primary btn-pin {{ pic.cover is defined and pic.cover == 1|default(0) ? 'active' : '' }}" style="padding:0;">
                                                                        <i class="fa  icon-coverflow"></i>
                                                                    </button>

                                                                    <!-- View pic in lightbox -->
                                                                    <a href="{{ pic.src | default( '' ) }}" class="btn btn-info btn-sm view" style="color:#ffffff;">
                                                                        <span class="glyphicon glyphicon-search"></span>
                                                                    </a>
                                                                </div>

                                                            </div>
                                                            <!-- < PictureBox bottom tool bar -->

                                                        </div>
                                                        <div class="widget-content padding" style="display:none;position:absolute;top:0%;z-index:8;background-color:rgba(255,255,255,1);border:inset 1px solid rgba(255,255,255,.5);margin-bottom:8px;height:100%;">
                                                                                      <ul id="imagedata{{ loop is defined ? '-' ~ loop.index0 : '' }}" class="nav nav-tabs nav-simple nav-sm"  style="position:absolute;top:4px; left:15px;">
                                                                                        <li class="active">
                                                                                            <a href="#imagedata-en{{ loop is defined ? '-' ~ loop.index0 : '' }}" data-toggle="tab">English</a>
                                                                                        </li>
                                                                                        <li class="">
                                                                                            <a href="#imagedata-fr{{ loop is defined ? '-' ~ loop.index0 : '' }}" data-toggle="tab">French</a>
                                                                                        </li>
                                                                                    </ul>                                                         
                                                                                    <div class="tab-content" style="padding-top:25px;padding-bottom:30px;">
                                                                                        <div class="tab-pane active" id="imagedata-en{{ loop is defined ? '-' ~ loop.index0 : '' }}">
                                                                                            <div class="input-group-sm">
                                                                                                <input name="titleEn[]" type="text" class="form-control pic-title" placeholder="Title" value="{{ pic.titleEn | default( '' ) }}" />
                                                                                                <textarea name="descEn[]" class="form-control input-small pic-desc" placeholder="Description">{{ pic.descriptionEn | default( '' ) | raw }}</textarea>                                                                                                
                                                                                            </div>
                                                                                        </div> <!-- / .tab-pane -->
                                                                                        <div class="tab-pane" id="imagedata-fr{{ loop is defined ? '-' ~ loop.index0 : '' }}">
                                                                                            <div class="input-group-sm">
                                                                                                <input name="titleFr[]" type="text" class="form-control input-small pic-title" placeholder="Title" value="{{ pic.titleFr | default( '' ) }}" />
                                                                                                <textarea name="descFr[]" class="form-control pic-desc" placeholder="Description">{{ pic.descriptionFr | default( '' ) | raw }}</textarea>                                                                                            
                                                                                                
                                                                                            </div>
                                                                                        </div> <!-- / .tab-pane -->                                                                                        
                                                                                    </div>                                                                                             
                                                        </div>
                                                    </div>

                                                                                                        
                                                </div>