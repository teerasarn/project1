    </div>
    
{#     {% if form.options is defined %}
        {{ form.options.loopCnt }}
    {% endif %} #}

{%- endblock gallery_image_row %}

{% block gallery_image_widget_simple -%}

    {% set type = type|default('text') -%}

    <input type="{{ type }}" {{ block( 'widget_attributes' ) }} {% if value is not empty %}value="{{ value }}"{% endif %} />

{%- endblock gallery_image_widget_simple %}

{% block gallery_image_widget_compound %}

    {% set attr = form.attr|default( { attr : { class : 'gallery_collection' } } ) %}
    {% set attr = attr|merge( { attr : { class : 'gallery_collection' } } ) %}

    <div class="{{ attr.class }}" {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}
        {{- block('form_rows') -}}
        {{- form_rest(form) -}}
    </div>

{% endblock gallery_image_widget_compound %}