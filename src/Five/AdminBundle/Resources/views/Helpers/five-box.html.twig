{% set boxtype = ( boxtype is defined ? boxtype : 'info' ) %}
{% set boxtype = boxtype in [ 'info', 'warning', 'success', 'danger' ] ? boxtype : 'info' %}

{% block fiveBox %}

    <div class="box box-{% block boxType %}{{ boxtype }}{% endblock %}">
        
        <div class="box-header">
            <h3 class="box-title">{% block boxTitle %}{{ title|default( '' ) }}{% endblock %}</h3>
        </div>
        
        <div class="box-body">            
            {% block boxBody %}{% endblock %}
        </div>

    </div>

{% endblock %}