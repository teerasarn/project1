{% extends 'FiveCuisinesVerdunBundle::base.html.twig' %}

{% block bodyTag %}

  <body class="entreprise {{ app.request.get( '_locale' ) }}{% if is_mobile()  %} mobile{% endif %}">

{% endblock %}

{% block content %}

    <section id="entreprise-intro" class="first-section inner-shadow">
      <div class="container">

          <div class="float-block">
            <h2>{{ 'intro.title' | trans({}, page) | raw }}</h2>
          </div>

      </div>
    </section>

    <section id="statistiques">
      <div class="container">
        <div class="row">
          <div class="col-sm-6"><img src="{{ asset( assets_path ~ 'img/statistique-' ~ currentLocale ~ '.png' ) }}"></div>
          <div class="col-sm-6">
            <h3>{{ 'statistiques.title' | trans({}, page) | raw }}</h3>
            <p>{{ 'statistiques.text' | trans({}, page) | raw }}</p>
            <h3>{{ 'statistiques.values_title' | trans({}, page) | raw }}</h3>
            <p class="values">{{ 'statistiques.values_text' | trans({}, page) | raw }}</p>
          </div>
        </div>
      </div>
    </section>

    <section id="service">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 aligned-right">
            <h2>{{ 'service.title' | trans({}, page) | raw }}</h2>
            <p>{{ 'service.text' | trans({}, page) | raw }}</p>
          </div>
        </div>
      </div>
      <div class="image-holder inner-shadow"></div>
    </section>

