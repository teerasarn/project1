{% extends 'FiveCuisinesVerdunBundle::base.html.twig' %}

{% block bodyTag %}

  <body class="services {{ app.request.get( '_locale' ) }}{% if is_mobile()  %} mobile{% endif %}">

{% endblock %}

{% block content %}
    
    <section id="service-intro" class="first-section">
      <div class="full-width">
        <div class="image-section inner-shadow"></div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-sm-7 col-sm-offset-5 service-intro-text">
            <h2>{{ 'intro.title' | trans({}, page) | raw }}</h2>
            <h5>{{ 'intro.subtitle' | trans({}, page) | raw }}</h5>
            <p>{{ 'intro.text' | trans({}, page) | raw }}</p>
          </div>
        </div>
        <a name="ideation"></a>
      </div>
    </section>
  
    <section id="service-step-1">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 padded40">
            <img src="{{ asset( assets_path ~ 'img/1.png' ) }}"/>
            <h2>{{ 'step-1.title' | trans({}, page) | raw }}</h2>
            <h5>{{ 'step-1.subtitle' | trans({}, page) | raw }}</h5>
            {{ 'step-1.text' | trans({}, page) | raw }}
          </div>
          <div class="col-sm-6 step-1-image"><img src="{{ asset( assets_path ~ 'img/services-step1.png' ) }}"/></div>
        </div>
        <a name="conception"></a>
      </div>
    </section>
        
    <section id="service-step-2">
      <div class="container">
        <div class="row">
          <div class="col-sm-6"><img class="img-responsive" src="{{ asset( assets_path ~ 'img/step2-2.jpg' ) }}"/></div>          
          <div class="col-sm-6 step2-1 padded40">
            <img src="{{ asset( assets_path ~ 'img/2.png' ) }}"/>
            <h2>{{ 'step-2.title' | trans({}, page) | raw }}</h2>
            
            <p>{{ 'step-2.text2' | trans({}, page) | raw }}</p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6 step2-2 padded40">
            <h2>{{ 'step-2.subtitle' | trans({}, page) | raw }}</h2>
            <p>{{ 'step-2.text' | trans({}, page) | raw }}</p>
          </div>
          <div class="col-sm-6"><img class="img-responsive" src="{{ asset( assets_path ~ 'img/step2-1.jpg' ) }}"/></div>
        </div>
      </div>
      <a name="production"></a>
    </section>
        
    <section id="service-step-3">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <img src="{{ asset( assets_path ~ 'img/3.png' ) }}"/>
            <h2 class="big-title">{{ 'step-3.title' | trans({}, page) | raw }}</h2>
            <h5>{{ 'step-3.subtitle' | trans({}, page) | raw }}</h5>
            <p>{{ 'step-3.text' | trans({}, page) | raw }}</p>
          </div>
        </div>
         <div class="row">
          <div class="col-sm-12">
            <ul class="renovation">
              <li><div class="transport img-placeholder"></div>
              </li><li><div class="plombage img-placeholder"></div>
              </li><li><div class="peinture img-placeholder"></div>
              </li><li><div class="fixtures img-placeholder"></div>
              </li><li><div class="electricite img-placeholder"></div></li>
            </ul>
            <a name="renovation"></a>
          </div>
        </div>
      </div>
    </section>
            
    <section id="service-step-4">
      
      <div class="container">
        <div class="row">
          <div class="col-sm-6 padded40">
            <img src="{{ asset( assets_path ~ 'img/4.png' ) }}"/>
            <h2>{{ 'step-4.title' | trans({}, page) | raw }}</h2>
            <h5>{{ 'step-4.subtitle' | trans({}, page) | raw }}</h5>
            <p>{{ 'step-4.text' | trans({}, page) | raw }}</p>
          </div>
          <div class="col-sm-6"></div>
        </div>
        
      </div>
      <div class="full-width">
        <div class="image-section inner-shadow"></div>
      </div>
      <a name="installation"></a>
      <div class="boya"></div>
    </section>
            
    <section id="service-step-5">
      
      <div class="plan-wrapper">
        <div class="wireframe-wrapper"><div class="p-wireframe"></div></div>
      </div>
      <div class="plan-rendered inner-shadow"></div>
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 white-text-box">
            <img src="{{ asset( assets_path ~ 'img/5.png' ) }}"/>
            <h2 class="green-h1 big-title">{{ 'step-5.title' | trans({}, page) | raw }}</h2>
            <h5>{{ 'step-5.subtitle' | trans({}, page) | raw }}</h5>
            <p>{{ 'step-5.text' | trans({}, page) | raw }}</p>
            <hr class="hr-green-200">
          </div>
        </div>
      </div>
    </section>
    
    <section id="service-done">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <h2 class="big-title">{{ 'done.title' | trans({}, page) | raw }}</h2>
            <h4>{{ 'done.text' | trans({}, page) | raw }}</h4>
          </div>
        </div>
      </div>
    </section>
          
    <section id="service-end" class="inner-shadow">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 white-text-box">
            <h3>{{ 'end.title' | trans({}, page) | raw }}</h3>
            <p>{{ 'end.text' | trans({}, page) | raw }}</p>
            <hr class="hr-green-200">
          </div>
        </div>
      </div>
    </section>

{% endblock %}