<style type="text/css">
    .home-blog img{
        width:100%;
    }
    .home-blog .blog_title{
        margin-bottom:0;
    }
    .home-blog small{
        font-size:12px;
    }
    .home-blog .container{
        text-align:center;
    }  
    .home-blog .blog-list{
        margin-top:50px;
    }  
    .home-blog .blog-list .col-md-6:first-child{
        padding-left:0;
        padding-right:10px;
    }
    .home-blog .blog-list .col-md-6:last-child{
        padding-left:10px;
        padding-right:0;
    }    
    .home-blog .blog-list .blog-item{
        position:relative;
        transition: all 0.5s;
        padding-bottom:50%;
    }
    .home-blog .blog-list .blog-item a{
        position:absolute;
        width:100%;
        height:100%;
    }
    .home-blog .blog-list .blog-item.no-prev{
        background-image:url(/bundles/fiveadmin/img/no-image.png);
        background-size:cover;
        background-position:center;
        background-repeat:no-repeat;
    }
    .home-blog .blog-list .overlay{
        position:absolute;
        top:0;
        left:0;
        right:0;
        bottom:0;
        background:#fffb23;
        text-align:center;
        opacity:0;
        transition:0.5s all;
    }
    .home-blog .blog-list .blog-item:hover .overlay{
        opacity:1;
    }
    .home-blog .blog-list span{
        font-size: 24px;
        color: #818181;
        text-transform: uppercase;
        display: inline-block;
        vertical-align: middle;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        height: 80px;
        margin: auto;
    }
    .home-blog .blog-list span:after{
        content:" ";
        display:block;
        width:47px;
        height:47px;
        background-image:url("/bundles/bloggerblog/images/readmore_icon.png");
        margin:0 auto;
    }   
    #home-blog .blog-list .col-md-6:first-child{
        overflow: hidden;
        opacity: 0;
        filter: alpha(opacity=0);
        -webkit-transition: all 1s;
        transition: all 1s;
        -webkit-transform: translate(-100%, 0px);
        -ms-transform: translate(-100%, 0px);
        transform: translate(-100%, 0px);
    }
    #home-blog .blog-list .col-md-6:last-child{
        overflow: hidden;
        opacity: 0;
        filter: alpha(opacity=0);
        -webkit-transition: all 1s;
        transition: all 1s;
        -webkit-transform: translate(100%, 0px);
        -ms-transform: translate(100%, 0px);
        transform: translate(100%, 0px);
    }
    #home-blog .blog-list .col-md-6.prod-in{
            opacity: 1;
        filter: alpha(opacity=100);
        -webkit-transform: translate(0px, 0px);
        -ms-transform: translate(0px, 0px);
        transform: translate(0px, 0px);
    }
    @media (min-width: 992px){
        #home-intro .menu-video li{
            width:14%;
        }
    }
    
    @media (max-width: 991px){
        .home-blog .blog-list .col-md-6:first-child{
            margin-bottom:20px;
        }
        .home-blog .blog-list{
            margin-top:20px;
        }
    }
    .mobile{
        overflow:auto;
        overflow-x:hidden;
    }
</style>

{# src/Blogger/BlogBundle/Resources/views/Page/index.html.twig #}

{% block body %}

	<section id="home-blog" class="home-blog">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="blog_title">{{ 'blog.blog_title' | trans({}, 'blog') | raw }}</h3>
                    <small class="blog_subtitlte">{{ 'blog.blog_recent' | trans({}, 'blog') | raw }}</small>
                </div>
            </div>
        </div>
        <div class="blog-list">
            <div class="row">
                {% for blog in blogs %}
                <div class="col-md-6">
                    
                    {% if blog.isImageExist(blog.image) == true %}          
                    <div class="blog-item">
                        <a href="{{ path( 'header.menu.blog_article_home_link' | trans  , { 'permalink': blog.getPermaLink()  }) }}">	
                            <img src="{{ asset([ blog.getImageURL(blog.image)  ] |join) }}" width="400"  />
                            <div class="overlay">
                                <span>
                                    {{ blog.title(50) }}                        
                                </span>
                            </div>
                        </a>  
                    </div>
                    {% else %}
                        <div class="blog-item no-prev">
                            <a href="{{ path( 'header.menu.blog_article_home_link' | trans  , { 'permalink': blog.getPermaLink()  }) }}">	
                            <div class="overlay">
                                <span>
                                    {{ blog.title(50) }}                        
                                </span>
                            </div>
                        </a> 
                        </div>
                    {% endif %}
                </div>           
                {% else %}
            </div>
        </div>
		<table width="100%">			
			<tr>	
				
	
    
       		   
    		<td width="50%" align="center">

            

       		</td>
    
    	<td>
        <p>There are no blog entries for symblog</p>
      </td>
    {% endfor %}

    		</tr>
		</table>
	 </section>    
    
{% endblock %}
